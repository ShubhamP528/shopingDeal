<%-include("../partials/header")%>
<%-include("../partials/navbar")%>



<form method="post" action="/product/<%=prod._id%>/show?_method=patch" novalidate class="needs-validation"  style="width: 700px; margin: 20px auto;">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Product Name</label>
      <input type="text" class="form-control" id="exampleInputEmail1" name="product[name]" value="<%=prod.name%>" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Image url</label>
      <input type="url" class="form-control" id="exampleInputPassword1" name="product[img]" value="<%=prod.img%>" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Price in $</label>
        <input type="number" class="form-control" id="exampleInputPassword1" name="product[price]" value="<%=prod.price%>" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Description</label>
        <textarea class="form-control" id="exampleInputPassword1" cols="30" rows="5" name="product[desc]" required><%=prod.desc%></textarea> 
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

  

    <button type="submit" class="btn btn-primary">Update</button>
  </form>





<%-include("../partials/footer")%>