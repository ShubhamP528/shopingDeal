
<%-include("../partials/header")%>
<%-include("../partials/navbar")%>
<%-include("../partials/flash")%>


<form method="post" action="/register" novalidate class="needs-validation mb-5" style="width: 700px; margin: 20px auto;">
    <h4 class="display-6">SignUp</h4>
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" class="form-control" id="username" name="username" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <div class="mb-3">
      <label for="userType" class="form-label">User Type</label>
      <select id="userType" class="form-select" name="userType" required aria-label="Default select example">
        <option selected >Select User Type</option>
        <option value="Consumer">Consumer</option>
        <option value="Retailer">Retailer</option>
      </select>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

  

    <button type="submit" class="btn btn-primary">SignUp</button>
  </form>





<%-include("../partials/footer")%>


